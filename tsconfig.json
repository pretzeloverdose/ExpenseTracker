{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-native", "react-native"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src",
    "__tests__",
    "*.ts",
    "*.tsx",
    "jest.setup.js"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios"
  ]
}
